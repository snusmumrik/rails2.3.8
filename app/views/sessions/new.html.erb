<h1><%= t('label.session.signin') %></h1>

<% form_tag session_path do -%>
<p><%= label_tag t('label.session.email') %><br />
<%= text_field_tag 'email', @email %></p>

<p><%= label_tag t('label.session.password') %><br/>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', t('label.session.remenber_me') %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= submit_tag t('link.session.signin') %></p>
<% end -%>
