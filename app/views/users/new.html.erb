<h1><%= t('label.user.sign_up_as_a_new_user') %></h1>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>

<p><%= label_tag t('label.user.name') %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag t('label.user.email') %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag t('label.user.password') %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', t('label.user.password_confirmation') %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag t('label.user.signup') %></p>
<% end -%>
