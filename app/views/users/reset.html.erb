<%= error_messages_for :user %>
<% form_for :user do |f| -%>
<table id="newedit">
  <thead>
    <tr>
      <th colspan="2" ><%= t('label.user.pick_a_new_password') %></th>
    </tr>
    <tr>
      <td align="right"><label><%= t('label.user.email') %>:</label></td>
      <td><%= @user.email %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td align="right"><label><%= t('label.user.password') %>:</label></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td align="right"><label><%= t('label.user.password_confirmation') %>:</label></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td><%= submit_tag 'Reset' %></td>
    </tr>
  </tbody>
</table>
<% end -%>